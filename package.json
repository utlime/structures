{
  "name": "@utlime/structures",
  "private": true,
  "author": "Alex Vysotsky <utlime@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/utlime/structures"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "prettier": "prettier --write 'packages/*/{src,tests,stories}/**/*.{ts,tsx}'",
    "lint": "tslint --project tsconfig.json -t codeFrame 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts'",
    "test": "jest --coverage",
    "build": "lerna run --stream build",
    "publish": "npm run test && npm run build && lerna publish",
    "precommit1": "lint-staged"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.144",
    "@types/node": "^10.14.22",
    "commitizen": "^3.1.2",
    "cz-lerna-changelog": "^2.0.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.1",
    "lint-staged": "^7.3.0",
    "lodash": "^4.17.15",
    "prettier": "^1.18.2",
    "rollup": "^0.66.6",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^23.10.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.7.0-dev.20191021"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
